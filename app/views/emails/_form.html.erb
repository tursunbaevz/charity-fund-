<%= form_for @email, html: {class: 'form-horizontal'} do   |f| %>
 

	 <div class="form-group ">
		 <div class="col-sm-10">
		    <%= f.label :name %>
		 </div>
	    <%= f.text_field :name  %>
	 </div>

	 <div class="form-group ">
		 <div class="col-sm-10">
		    <%= f.label :email %><br />
		 </div>
	    <%= f.email_field :email, autofocus: true %>
	 </div>

	<div class="form-group ">
		<div class="col-sm-10">
			<%= f.label :content  %>
		</div>
		<%= f.text_area :content  %>
	</div>

	<div class="form-group ">
		<%= f.submit "Submit", class: "btn btn-success" %>
	</div>

<% end %>